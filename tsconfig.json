{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}

